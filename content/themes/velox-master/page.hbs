{{!< default}}

<header class="site_width text center padding_top_big margin_bottom_big">
  {{#if @blog.logo}}<a href="{{@blog.url}}"><div style="background: url({{@blog.logo}})"></div></a>{{/if}}
  <h1 class="blog_title margin_bottom_small"><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
  <h4 class="text book">{{@blog.description}}</h4>
  {{!
    Here, you can add your nav menu.
    Also go to partials/nav-menu.hbs to set your links.
  }}
  {{> nav-menu}}
</header>

<main class="site_width" role="main">
  <article class="{{post_class}}">

    {{#post}}

    <header class="text center margin_bottom_medium">
      {{#if tags}}<h5 class="text book small uppercase color c_black_light margin_bottom_small">Posted in {{tags}}</h5>{{/if}}
      <h1 class="margin_bottom_medium">{{{title}}}</h1>
      <h5 class="text book small uppercase color c_black_light margin_bottom_small"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="dddd, MMMM DD, YYYY"}}</time></h5>
    </header>

    <section>
      {{content}}
    </section>

    {{/post}}
    </article>
</main>